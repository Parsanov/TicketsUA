@using TicketsUA.ViewModel
@model LoginVM



<div class="login-form-container">
  <h2 class="login-heading">Login</h2>
  <form asp-action="Login" method="post">
    <label asp-for="Email">Email</label>
    <input asp-for="Email" type="email" id="email" placeholder="Enter email" class="login-input" required>

    <label asp-for="Password">Password</label>
    <input asp-for="Password" type="password" id="password" placeholder="Enter password" name="password" class="login-input" required>

    <button type="submit" class="login-button">Login</button>
  </form>
</div>