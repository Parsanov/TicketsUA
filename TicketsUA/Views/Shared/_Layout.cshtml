@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AviaTikets</title>
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/style-card.css">
    <link rel="stylesheet" href="~/css/ticketsView.css">
    <link rel="stylesheet" href="~/css/login.css">
    <link rel="stylesheet" href="~/css/register.css">
   @*  <!-- CSS Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet"> *@

</head>
<body>

    <div class="background-navbar">
        <header>
            <nav class="container">
                <div class="navbar">
                    <div class="logo">
                        <a class="navbar-logo-text" asp-controller="AirTickets" asp-action="Index"><h1>AirTickets</h1></a>
                    </div>
                    <ul class="nav-info">
                        
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li><a class="navbar-propertis" asp-controller="Dashboard" asp-action="Index">Профіль</a></li>
                        }
                        else
                        {
                            <li><a class="navbar-propertis" asp-controller="User" asp-action="Login">Увійти</a></li>
                            <li><a class="navbar-propertis" asp-controller="User" asp-action="Register">Реєстрація</a></li>
                        }

                        <li><a class="navbar-propertis" href="">Авіаквитки</a></li>
                        <li><a class="navbar-propertis" href="">Залізничні квитки</a></li>
                    </ul>
                </div>
            </nav>
        </header>
    </div>


    <div class="">
        <main role="main" class="pb-3">
            @RenderBody();
        </main>
    </div>

    <footer>
        <div>
            <!-- Додайте вміст для футера тут -->
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
